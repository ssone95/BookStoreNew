@model LoginFormViewModel

@{
    Layout = "_Layout";
}

<section class="login">
	<div class="login_box">
		<div class="left">
			<div class="contact">
				<form asp-action="Login" asp-controller="Account" method="post">
					<h3>SIGN IN</h3>
					@Html.HiddenFor(m => m.ReturnUrl)
					@Html.ValidationMessageFor(m => m.Username)
					<input class="form-control" placeholder="Username" asp-for="Username" placeholder="USERNAME" autofocus>
					@Html.ValidationMessageFor(m => m.Password)
					<input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off" placeholder="PASSWORD">
					@Html.ValidationSummary()
					<button class="submit">LET'S GO</button>
				</form>
			</div>
		</div>
		<div class="right">
			<div class="right-text">
				<h2>LONYX</h2>
				<h5>A UX BASED CREATIVE AGENCEY</h5>
			</div>
		</div>
	</div>
</section>